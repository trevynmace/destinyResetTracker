<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trevynmace.destinyresettracker.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <CheckBox
        android:id="@+id/clanXpCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Clan XP"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/treasureMapsCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Cayde Treasure Maps"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/clanXpCheckbox"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/callToArmsCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Call to Arms"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/treasureMapsCheckbox"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/nightfallCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Nightfall Strike"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/callToArmsCheckbox"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/flashpointCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Flashpoint"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nightfallCheckbox"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/raidStandardBearersCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Standard Bearers"
        app:layout_constraintTop_toBottomOf="@+id/raidTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/raidRoyalPoolsCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Royal Pools"
        app:layout_constraintTop_toBottomOf="@+id/raidStandardBearersCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/raidPleasureGardensCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Pleasure Gardens"
        app:layout_constraintTop_toBottomOf="@+id/raidRoyalPoolsCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/raidGauntletCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Gauntlet"
        app:layout_constraintTop_toBottomOf="@+id/raidPleasureGardensCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/raidEmperorCalusCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Emperor Calus"
        app:layout_constraintTop_toBottomOf="@+id/raidGauntletCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf="@+id/raidEmperorCalusCheckbox"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/raidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raid:"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/flashpointCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>
