<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trevynmace.destinyresettracker.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <CheckBox
        android:id="@+id/clanXpCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Clan XP (Weekly)"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/treasureMapsCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Cayde Treasure Maps (Weekly)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/clanXpCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/callToArmsCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Call to Arms (Weekly)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/treasureMapsCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/nightfallCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Nightfall Strike (Weekly)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/callToArmsCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/flashpointCheckbox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Flashpoint (Weekly)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nightfallCheckbox"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/flashpointCheckbox"/>

</android.support.constraint.ConstraintLayout>
